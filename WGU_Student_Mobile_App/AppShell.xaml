    </ShellItem>
    
    <!--
    Notes
    -->

    <FlyoutItem Title="Notes">
        <ShellContent Route="Notes" ContentTemplate="{DataTemplate local:Notes}" />
    </FlyoutItem>

    <FlyoutItem Title="NoteDetails" FlyoutItemIsVisible="False">
